
@model BingoOnline.Models.Bingo

@{
    ViewBag.Title = "Sortear";
}

<h2>Sortear</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bingo</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.BingoID, "BingoID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("BingoID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BingoID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

